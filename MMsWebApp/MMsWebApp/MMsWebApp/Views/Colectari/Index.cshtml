@model MMsWebApp.ViewModels.ColectariViewModel
@{
    ViewData["Title"] = "Colectari";
}

<h1>Colectari</h1>

<div class="row">
    <div class="col-md-8">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>IdPubela</th>
                <th>CollectedAt</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Colectari)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.IdPubela</td>
                    <td>@item.CollectedAt</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h4>Adauga Colectare</h4>
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label asp-for="NewColectare.IdPubela" class="control-label"></label>
                <input asp-for="NewColectare.IdPubela" class="form-control" />
                <span asp-validation-for="NewColectare.IdPubela" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewColectare.CollectedAt" class="control-label"></label>
                <input asp-for="NewColectare.CollectedAt" class="form-control" />
                <span asp-validation-for="NewColectare.CollectedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
